<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDE7"
    tools:context=".ui.MainActivity">

    <!--    android:background="#4FEAD481"-->


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/iv_heart"
                android:layout_width="71dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="180dp"
                android:background="@drawable/rectangle_edge_main"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/heartbeat_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_oxgen"
                android:layout_width="74dp"
                android:layout_height="68dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rectangle_edge_main"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/oxgen_color"
                app:layout_constraintBottom_toTopOf="@+id/iv_heart"
                app:layout_constraintEnd_toEndOf="@+id/iv_heart"
                app:layout_constraintStart_toStartOf="@+id/iv_heart" />

            <ImageView
                android:id="@+id/iv_makbak"
                android:layout_width="65dp"
                android:layout_height="74dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle_edge_main"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/makbak2"
                app:layout_constraintEnd_toEndOf="@+id/iv_heart"
                app:layout_constraintStart_toStartOf="@+id/iv_heart"
                app:layout_constraintTop_toBottomOf="@+id/iv_heart" />


            <ImageView
                android:id="@+id/btn_navi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_baseline_menu_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_oxgen"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:layout_marginStart="36dp"
                android:layout_marginLeft="36dp"

                android:background="@drawable/rectangle_background_main"
                android:text="96"
                android:gravity="center"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_oxgen"
                app:layout_constraintStart_toEndOf="@+id/iv_oxgen"
                app:layout_constraintTop_toTopOf="@+id/iv_oxgen"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tv_heart"
                android:layout_width="150dp"
                android:layout_height="0dp"

                android:layout_marginStart="36dp"
                android:layout_marginLeft="36dp"
                android:background="@drawable/rectangle_background_main"
                android:text="71"
                android:gravity="center"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_heart"
                app:layout_constraintStart_toEndOf="@+id/iv_heart"
                app:layout_constraintTop_toTopOf="@+id/iv_heart" />

            <TextView
                android:id="@+id/tv_makbak"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:layout_marginStart="36dp"
                android:layout_marginLeft="36dp"
                android:background="@drawable/rectangle_background_main"
                android:text="70"
                android:gravity="center"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_makbak"
                app:layout_constraintStart_toEndOf="@+id/iv_makbak"
                app:layout_constraintTop_toTopOf="@+id/iv_makbak" />

            <!--            체크박스둬서 클릭하면 todolist에 추가하기-->



            <ImageButton
                android:id="@+id/ib_graph"
                android:layout_width="184dp"
                android:layout_height="185dp"
                android:layout_marginEnd="110dp"
                android:layout_marginRight="110dp"
                android:layout_marginBottom="68dp"
                android:background="@drawable/circle_background"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.202"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/bar_graph" />

            <ImageView
                android:id="@+id/iv_todo"
                android:layout_width="166dp"
                android:layout_height="181dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/rectangle_background_main"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/calender"
                app:layout_constraintBottom_toBottomOf="@+id/ib_graph"
                app:layout_constraintStart_toEndOf="@+id/ib_graph"
                app:layout_constraintTop_toTopOf="@+id/ib_graph"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/tv_mission"
                android:layout_width="339dp"
                android:layout_height="78dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/rectangle_edge_main"
                android:gravity="center"
                android:text="오늘의 미션:  규칙적으로 3끼 챙겨먹기 "
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_makbak" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="77dp"
                android:layout_height="88dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/sun" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/naviView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navi_menu"/>


</androidx.drawerlayout.widget.DrawerLayout>