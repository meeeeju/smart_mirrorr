<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.RealMainActivity">

    <androidx.cardview.widget.CardView
            android:id="@+id/maincard1"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp">

        <LinearLayout
                android:layout_width="316dp"
                android:layout_height="222dp"
                android:layout_gravity="center"
                android:orientation="vertical">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"

                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/mainsmile"

                        android:layout_marginTop="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:layout_gravity="top"
                        app:srcCompat="@drawable/smile3" />

                <TextView
                        android:id="@+id/username"
                        android:layout_width="204dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textColor="@color/black"
                        android:fontFamily="@font/font"
                        android:textCursorDrawable="@color/main_white"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="30dp" />

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/mainlist"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp" />

            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:orientation="horizontal">
                <TextView
                        android:text="Blood Pressure"
                        android:layout_width="146dp"
                        android:layout_height="25dp"
                        android:textSize="16dp"
                        android:id="@+id/textView3" />
                <TextView
                        android:id="@+id/bloddpressure"
                        android:layout_width="146dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="end"
                        android:textAlignment="textEnd"
                        android:background="@null"/>
            </LinearLayout>
"
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">
                <TextView
                        android:text="Pulse"

                        android:layout_width="146dp"
                        android:layout_height="25dp"
                        android:textSize="16dp"
                        android:id="@+id/textView4" />
                <TextView
                        android:id="@+id/pulse"
                        android:layout_width="146dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="end"
                        android:textAlignment="textEnd"
                        android:background="@null"/>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">
                <TextView
                        android:text="Oxygen Saturation"

                        android:layout_width="146dp"
                        android:layout_height="25dp"
                        android:textSize="16dp"
                        android:id="@+id/textView5" />
                <TextView
                        android:id="@+id/oxygen"
                        android:layout_width="146dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="end"
                        android:textAlignment="textEnd"
                        android:background="@null"/>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <com.example.yanadu.ui.DigitTextView
                    android:id="@+id/digitTextView"
                    android:layout_marginLeft="20dp"
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
            ></com.example.yanadu.ui.DigitTextView>
            <ImageButton
                    android:text="Click"
                    android:layout_width="wrap_content"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_margin="3dp"
                    android:src="@drawable/smile3"
                    android:padding="10dp"
                    android:layout_height="match_parent" android:id="@+id/button3" android:layout_weight="1"/>

        </LinearLayout>

        <!--        <ImageButton-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:src="@drawable/shuffle64"-->
<!--                android:id="@+id/mainshuffle"-->
<!--                style="@style/Widget.AppCompat.Button.Borderless"/>-->


    </LinearLayout>


    <LinearLayout
            android:layout_width="389dp"
            android:layout_height="260dp"
            android:layout_marginLeft="12dp"
            android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">

            <androidx.cardview.widget.CardView
                    android:id="@+id/maincard2"
                    app:cardBackgroundColor="@color/white"
                    android:elevation="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="15dp" tools:layout_editor_absoluteY="20dp" tools:layout_editor_absoluteX="253dp">


                <ImageView
                        android:src="@drawable/pulsemain"
                        android:layout_width="70dp"
                        android:layout_height="70dp" android:id="@+id/imagePulse"/>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <Button
                android:id="@+id/mirrorconnect"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_margin="10dp"
                android:background="@drawable/alittlebitroundbutton"
                android:backgroundTint="@color/real_maincolor"
                android:text="Connect"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"


                android:textSize="20dp"
                android:textColor="#F8F3F3"
                android:fontFamily="@font/font"/>


    </LinearLayout>


</LinearLayout>