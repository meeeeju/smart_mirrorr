<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.RealMainActivity">

    <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="10dp"
            app:cardElevation="30dp"
            app:cardBackgroundColor="@color/main_grey_700">

        <LinearLayout
                android:layout_width="316dp"
                android:layout_height="222dp"
                android:layout_gravity="center"
                android:orientation="vertical">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"

                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/mainsmile"

                        android:layout_marginTop="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:layout_gravity="top"
                        app:srcCompat="@drawable/smile3" />

                <EditText
                        android:layout_width="204dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textCursorDrawable="@color/main_white"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:textSize="30dp" />

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/mainlist"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp" />

            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:orientation="horizontal">
                <TextView
                        android:text="Blood Pressure"
                        android:layout_width="146dp"
                        android:layout_height="25dp"
                        android:textSize="16dp"
                        android:id="@+id/textView3" />
                <EditText
                        android:layout_width="146dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="right"
                        android:background="@null"/>
            </LinearLayout>
"
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:orientation="horizontal">
                <TextView
                        android:text="Pulse"
                        android:layout_marginTop="6dp"
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:id="@+id/textView4" />
                <EditText
                        android:layout_width="146dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="right"
                        android:background="@null"/>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:orientation="horizontal">
                <TextView
                        android:text="Oxygen Saturation"
                        android:layout_marginTop="6dp"
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:id="@+id/textView5" />
                <EditText
                        android:layout_width="146dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="right"
                        android:background="@null"/>

            </LinearLayout>




        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageButton
            android:src="@drawable/randombutton"
            android:layout_width="55dp"
            android:layout_height="49dp"
            android:id="@+id/imageButton"
            android:layout_gravity="right"
            android:layout_marginRight="27dp"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="315dp"
            android:layout_marginTop="367dp"
            style="@style/Widget.AppCompat.Button.Borderless"/>


</FrameLayout>