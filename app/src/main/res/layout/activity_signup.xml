<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.SignupActivity">


        <TextView
            android:id="@+id/tv_join_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="@color/main_brown"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.117" />

        <EditText
            android:id="@+id/et_join_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:ems="10"
            android:hint="이름"
            android:inputType="textPersonName"
            android:textColor="@color/main_brown"
            android:textColorHighlight="@color/main_brown"
            android:textColorHint="@color/main_brown"
            android:textColorLink="@color/main_brown"
            android:textCursorDrawable="@color/main_brown"
            android:backgroundTint="@color/main_brown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_join_id" />

        <EditText
            android:id="@+id/et_join_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="ID"
            android:inputType="textPersonName"
            android:textColor="@color/main_brown"
            android:textColorHighlight="@color/main_brown"
            android:textColorHint="@color/main_brown"
            android:textColorLink="@color/main_brown"
            android:textCursorDrawable="@color/main_brown"
            android:backgroundTint="@color/main_brown"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_join_name"
            app:layout_constraintVertical_bias="0.057" />

        <EditText
            android:id="@+id/et_join_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/main_brown"
            android:textColorHighlight="@color/main_brown"
            android:textColorHint="@color/main_brown"
            android:textColorLink="@color/main_brown"
            android:textCursorDrawable="@color/main_brown"
            android:backgroundTint="@color/main_brown"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_join_id"
            app:layout_constraintVertical_bias="0.069" />

        <EditText
            android:id="@+id/et_join_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Mail"
            android:inputType="textEmailAddress"
            android:textColor="@color/main_brown"
            android:textColorHighlight="@color/main_brown"
            android:textColorHint="@color/main_brown"
            android:textColorLink="@color/main_brown"
            android:textCursorDrawable="@color/main_brown"
            android:backgroundTint="@color/main_brown"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_join_pwd"
            app:layout_constraintVertical_bias="0.093" />

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/main_grey"
            android:text="회원가입 하기"
            android:textSize="20sp"
            android:textColor="@color/main_brown"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_join_mail"
            app:layout_constraintVertical_bias="0.323" />



</androidx.constraintlayout.widget.ConstraintLayout>