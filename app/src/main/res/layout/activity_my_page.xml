<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_margin="30dp"
    tools:context=".ui.mypage.MyPageActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:text="USER"
        android:textColor="@color/schedule_color"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_user"
        android:layout_width="99dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/userimg" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp">

        <TextView
            android:id="@+id/label_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:background="@color/main_grey"
            android:text="NAME" />

        <EditText
            android:id="@+id/my_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/main_grey"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="@color/schedule_color"
            android:textColorHighlight="@color/main_brown"
            android:textCursorDrawable="@color/schedule_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp">

        <TextView
            android:id="@+id/label_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:background="@color/main_grey"
            android:text="ID" />

        <EditText
            android:id="@+id/my_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/main_grey"
            android:ems="10"
            android:hint="ID"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="@color/schedule_color"
            android:textColorHighlight="@color/main_brown"
            android:textCursorDrawable="@color/schedule_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp">

        <TextView
            android:id="@+id/label_mail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:background="@color/main_grey"
            android:text="E-mail" />

        <EditText
            android:id="@+id/my_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/main_grey"
            android:ems="10"
            android:hint="mail"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="@color/schedule_color"
            android:textColorHighlight="@color/main_brown"
            android:textCursorDrawable="@color/schedule_color" />
    </LinearLayout>


    <TextView
        android:id="@+id/txtlay_birth"
        android:layout_width="322dp"
        android:layout_height="25dp"
        android:layout_marginTop="24dp"
        android:text="Birth"
        android:textColor="@color/schedule_color"
        android:textStyle="bold" />

    <DatePicker
        android:id="@+id/my_birthSpinner"
        android:layout_width="258dp"
        android:layout_height="90dp"
        android:calendarTextColor="@color/schedule_color"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"

        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtlay_gender"
        android:layout_width="322dp"
        android:layout_height="25dp"
        android:layout_marginTop="4dp"
        android:text="Gender"
        android:textColor="#070707"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/my_btnfemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FEMALE"
            android:textColor="@color/main_grey"
            android:textColorHighlight="@color/main_grey_700"
            android:textColorHint="@color/main_grey_700"
            android:textColorLink="@color/main_grey"
            android:textCursorDrawable="@color/main_grey_700" />

        <Button
            android:id="@+id/my_btnmale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="male"
            android:textColor="@color/main_grey" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtlay_smoking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Do you want to Smoking Chanllenge?"
            android:textColor="@color/schedule_color"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/my_smoking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7" />
    </LinearLayout>

    <Button
        android:id="@+id/my_btnsave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="save" />


</LinearLayout>