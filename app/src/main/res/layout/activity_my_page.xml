<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mypage.MyPageActivity"
    tools:layout_editor_absoluteX="53dp"
    tools:layout_editor_absoluteY="1dp">

    <TextView
        android:id="@+id/tv_mypage_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="USER"
        android:textColor="@color/schedule_color"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_user" />

    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="99dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042"
        app:srcCompat="@drawable/userimg" />


    <EditText
        android:id="@+id/et_mypage_name"
        android:layout_width="322dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/main_grey"
        android:ems="10"
        android:hint="ID"
        android:inputType="textPersonName"
        android:text="IMUSER"
        android:textColor="@color/schedule_color"
        android:textColorHighlight="@color/main_brown"
        android:textCursorDrawable="@color/schedule_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mypage_name2" />

    <TextView
        android:id="@+id/tv_mypage_id"
        android:layout_width="322dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:text="ID"
        android:textColor="@color/schedule_color"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mypage_name1" />

    <TextView
        android:id="@+id/tv_mypage_name2"
        android:layout_width="322dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:text="Name"
        android:textColor="@color/schedule_color"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_mypage_id" />

    <EditText
        android:id="@+id/et_mypage_id"
        android:layout_width="322dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/main_grey"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:text="USER"
        android:textColor="@color/schedule_color"
        android:textCursorDrawable="@color/schedule_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mypage_id" />

    <DatePicker
        android:id="@+id/dpSpinner"
        android:layout_width="258dp"
        android:layout_height="90dp"
        android:layout_marginTop="4dp"
        android:calendarTextColor="@color/schedule_color"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.281"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mypage_birth"
        tools:ignore="MissingConstraints" />

    <Switch
        android:id="@+id/swch_smoking"
        android:layout_width="53dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.131"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mypage_smoking" />

    <TextView
        android:id="@+id/tv_mypage_smoking"
        android:layout_width="322dp"
        android:layout_height="25dp"
        android:layout_marginTop="4dp"
        android:text="Do you want to Smoking Chanllenge?"
        android:textColor="@color/schedule_color"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_male" />

    <Button
        android:id="@+id/btn_male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="male"
        android:textColor="@color/main_grey"
        app:layout_constraintEnd_toStartOf="@+id/btn_female"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mypage_gender" />

    <Button
        android:id="@+id/btn_female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="192dp"
        android:layout_marginRight="192dp"

        android:text="FEMALE"
        android:textColor="@color/main_grey"
        android:textColorHighlight="@color/main_grey_700"
        android:textColorHint="@color/main_grey_700"
        android:textColorLink="@color/main_grey"
        android:textCursorDrawable="@color/main_grey_700"
        app:layout_constraintBottom_toBottomOf="@+id/btn_male"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_male"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_mypage_gender"
        android:layout_width="322dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:text="Gender"
        android:textColor="#070707"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dpSpinner" />

    <TextView
        android:id="@+id/tv_mypage_birth"
        android:layout_width="322dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:text="Birth"
        android:textColor="@color/schedule_color"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_mypage_name" />


</androidx.constraintlayout.widget.ConstraintLayout>