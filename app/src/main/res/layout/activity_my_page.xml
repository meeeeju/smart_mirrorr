<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mypage.MyPageActivity"
    android:orientation="vertical"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="USER"
        android:textColor="@color/schedule_color"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/img_user"
        android:layout_width="99dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/userimg" />

    <EditText
        android:id="@+id/txtpl_id"
        android:layout_width="322dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="ID"
        android:inputType="textPersonName"
        android:text="IMUSER"
        android:backgroundTint="@color/main_grey"
        android:textColor="@color/schedule_color"
        android:textColorHighlight="@color/main_brown"
        android:textCursorDrawable="@color/schedule_color"
      />


    <TextView
        android:id="@+id/txtlay_id"
        android:layout_width="322dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:text="ID"
        android:textColor="@color/schedule_color"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txtlay_name"
        android:layout_width="322dp"
        android:layout_height="25dp"
        android:layout_marginTop="24dp"
        android:text="Name"
        android:textColor="@color/schedule_color"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/txt_name"
        android:layout_width="322dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:text="USER"
        android:textColor="@color/schedule_color"
        android:textCursorDrawable="@color/schedule_color"
        android:backgroundTint="@color/main_grey"
       />

    <TextView
        android:id="@+id/txtlay_birth"
        android:layout_width="322dp"
        android:layout_height="25dp"
        android:layout_marginTop="24dp"
        android:text="Birth"
        android:textColor="@color/schedule_color"
        android:textStyle="bold"
         />

    <TextView
        android:id="@+id/txtlay_gender"
        android:layout_width="322dp"
        android:layout_height="25dp"
        android:layout_marginTop="4dp"
        android:text="Gender"
        android:textColor="#070707"
        android:textStyle="bold"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FEMALE"
            android:textColor="@color/main_grey"
            android:textColorHighlight="@color/main_grey_700"
            android:textColorHint="@color/main_grey_700"
            android:textColorLink="@color/main_grey"
            android:textCursorDrawable="@color/main_grey_700" />

        <Button
            android:id="@+id/btn_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="male"
            android:textColor="@color/main_grey" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/txtlay_smoking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Do you want to Smoking Chanllenge?"
            android:textColor="@color/schedule_color"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/swch_smoking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"/>
    </LinearLayout>

    <DatePicker
        android:id="@+id/dpSpinner"
        android:layout_width="258dp"
        android:layout_height="90dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:calendarTextColor="@color/schedule_color"

        tools:ignore="MissingConstraints" />


</LinearLayout>